doctype html 
html(lang="en")
    head 
        meta(charset="utf-8")
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name="viewport", content="width=device-width, initial-scale=1")
        link(rel="stylesheet", href="../static/style.css")
        script(type="text/javascript", src="../static/bgride.js")
        title BGUber
    body()
        header 
            ul 
                li(style="background-color:white; border:1px solid black;")
                    a(id="logo",href="/") 
                        img(src="../static/img/Logo.jpg", alt="Logo", width="70px")
                li(class="hide-small")
                    a(href="/News.pug") News
                li(class="hide-small")
                    a(href="Help.pug") Help   
                li(class="hide-small",style="float:right;")
                    a(class="active" ,href="/About.pug") About
                li(class="hide-medium hide-large black opennav", style="float:right")
                    a(href="javascript:void(0);" ,onclick="javascript:w3_open();") &#9776;

            div(id="rightmenu" ,class="hide-large hide-medium")
                nav(class="sidenav collapse white card-2 animate-right", style="width:200px;right:0; height:auto;" ,id="mySidenav")
                    a(href="javascript:void(0)" ,onclick="w3_close()" ,class="closenav large hide-large") Close &times;
                    a(href="/") Home 
                    a(href="/Help.pug") Help  
                    a(href="/News.pug") News
                    a(href="/About.pug") About 
        
        
        div(class="background-image")
            div(class="grid-container")
                div(class="title", id="MainHeader") #{header} 
                div(class="leftbody")
                div(class="centerbody") #{h1}
                    block content
                div(class="rightbody")
            footer(style="position: fixed; bottom: 0; width: 100%;") 
